<div class="app">
    <aside class="sidebar">
        <div class="brand">
            <div class="logo">♫</div>
            <div class="brand-text">
                <h1>Mixtape</h1>
                <p>by Bigamer</p>
            </div>
        </div>

        <nav class="nav">
            <button id="open-task-form-btn" class="btn primary w-full">
                + Add Track
            </button>

            <ul class="lists">
                <li class="active">
                    <span class="dot"></span> My Mix
                </li>
            </ul>
        </nav>
    </aside>

    <main class="main">
        <header class="toolbar">
            <h2>Playlist</h2>
            <div class="search-wrap">
                <input id="search" type="search" placeholder="Search tracks or artists…" />
            </div>
        </header>

        <section id="tasks-container" class="tracks">
            <table>
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Song Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>ABCD</td>
                    </tr>
                </tbody>
            </table>
        </section>
    </main>
</div>

<!-- Slide-over Form -->
<form id="task-form" class="panel hidden">
    <div class="panel-header">
        <h3 id="panel-title">Add Track</h3>
        <button type="button" id="close-task-form-btn" class="icon-btn" aria-label="Close">✕</button>
    </div>

    <label class="field">
        <span>Track Title</span>
        <input id="title-input" type="text" placeholder="e.g. No One Knows" required />
    </label>

    <label class="field">
        <span>Artist</span>
        <input id="date-input" type="text" placeholder="e.g. Queens of the Stone Age" />
    </label>

    <label class="field">
        <span>Notes / Link (optional)</span>
        <textarea id="description-input" rows="4" placeholder="Add a URL or notes…"></textarea>
    </label>

    <div class="panel-actions">
        <button id="add-or-update-task-btn" class="btn primary" type="submit">Add Track</button>
        <button id="cancel-btn" class="btn ghost" type="button">Cancel</button>
    </div>
</form>

<!-- Confirm discard dialog -->
<dialog id="confirm-close-dialog" class="confirm">
    <h4>Discard changes?</h4>
    <p>You have unsaved edits to this track.</p>
    <div class="confirm-actions">
        <button id="discard-btn" class="btn danger" type="button">Discard</button>
        <button id="cancel-btn" class="btn ghost" type="button">Keep Editing</button>
    </div>
</dialog>
<link href="~/css/style.css" rel="stylesheet" />
<script src="~/js/playlist.js"></script>